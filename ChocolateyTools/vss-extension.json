{
	"manifestVersion": 1,
	"id": "jungit-choco",
	"version": "1.1.0",
	"name": "Chocolatey Tools",
	"scopes": [],
	"description": "Chocolatey tools to be used during a release using VSTS/TFS",
	"publisher": "jungeriusit",
	"public": true, 
	"baseUri": "https://github.com/chrisism/",
	"icons": {
		"default": "img/logo.png"
	},
	"targets": [
		{
			"id": "Microsoft.VisualStudio.Services"
		}
	],
	"tags": [
		"choco",
		"chocolatey",
		"packages",
		"software"
	],
	"links": {
		"home": {
			"uri": "https://github.com/chrisism/VSTS.ChocolateyTools"
		},
		"learn": {
			"uri": "https://github.com/chrisism/VSTS.ChocolateyTools"
		},
		"support": {
			"uri": "https://github.com/chrisism/VSTS.ChocolateyTools/issues"
		},
		"repository": {
			"uri": "https://github.com/chrisism/VSTS.ChocolateyTools"
		}
	},
	"repository": {
		"type": "git",
		"uri": "https://github.com/chrisism/VSTS.ChocolateyTools"
	},
	"screenshots": [
		{
			"path": "screenshot-01.jpg"
		},
		{
			"path": "screenshot-02.jpg"
		}
	],
	"branding": {
		"color": "rgb(157, 140, 255)",
		"theme": "light"
	},
	"files": [
		{ "path": "ChocolateyInstalled" },
		{ "path": "ChocolateyInstallPackage" }
	],
	"content": {
		"details": {
			"path": "overview.md"
		},
		"license": {
			"path": "license.md"
		}
	},
	"categories": [
		"Build and release"
	],
	"contributions": [
		{
			"id": "jungit-chocoinstalled",
			"targets": [
				"ms.vss-distributed-task.tasks"
			],
			"type": "ms.vss-distributed-task.task",
			"properties": {
				"name": "ChocolateyInstalled"
			}
		},
		{
			"id": "jungit-chocoinstaller",
			"targets": [
				"ms.vss-distributed-task.tasks"
			],
			"type": "ms.vss-distributed-task.task",
			"properties": {
				"name": "ChocolateyInstallPackage"
			}
		}
	]
}
